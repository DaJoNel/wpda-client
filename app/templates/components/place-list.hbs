<h2>List of Places</h2>
<button type="button" class="btn btn-default">Watch a New Place</button>
{{#if model.length}}
<table class="table-responsive table-striped table-condensed">
    <thead>
        <tr>
            <th>Verified?</th>	<!--This should only be visible when logged in-->
            <th>Name</th>
            <th>Number</th>
            <th>Street</th>
            <th>City</th>
            <th>State</th>
            <th>Categories</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Lock Level</th>
            <th>PUR?</th>
            <th>Residential?</th>
        </tr>
    </thead>
    <tbody>
    {{#each model as |place|}}
        <tr>
            {{#if place.isVerified}}
            <td><input type="checkbox" checked disabled></td>
            {{else}}
            <td><input type="checkbox" disabled></td>
            {{/if}}
            <td><a href="{{place.permalink}}">{{place.name}}</a></td>
            <td>{{place.number}}</td>
            <td>{{place.street}}</td>
            <td>{{place.city}}</td>
            <td>{{place.state}}</td>
            <td>{{place.categories}}</td>
            <td>{{place.createdBy}} on {{place.createdOn}}</td>
            <td>{{place.updatedBy}} on {{place.updatedOn}}</td>
            <td>{{place.lockLevel}}</td>
            {{#if place.updateRequest}}
            <td><input type="checkbox" checked disabled></td>
            {{else}}
            <td><input type="checkbox" disabled></td>
            {{/if}}
            {{#if place.isResidential}}
            <td><input type="checkbox" checked disabled></td>
            {{else}}
            <td><input type="checkbox" disabled></td>
            {{/if}}
        </tr>
    {{/each}}
    </tbody>
</table>
{{else}}
<p>No places are being watched. Click the button above to watch a new place.</p>
{{/if}}

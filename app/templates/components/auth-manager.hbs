{{#if session.isAuthenticated}}
<p class="auth-form">
	<button type="button" class="btn btn-default" {{action 'invalidateSession'}}>Logout</button>
</p>
{{else}}
<form class="form-inline auth-form" {{action 'authenticate'}}>
	<div class="form-group">
		<label class="control-label" for="username">Login</label>
		{{input class="form-control auth-field" id="username" placeholder="Enter Username" value=username}}
	</div>
	<div class="form-group">
		<label class="control-label" for="password">Password</label>
		{{input class="form-control auth-field" id="password" placeholder="Enter Password" type="password" value=password}}
	</div>
	<button type="submit" class="btn btn-default">Login</button>
	{{#if error}}
	<p>{{error}}</p>
	{{/if}}
</form>
{{/if}}
